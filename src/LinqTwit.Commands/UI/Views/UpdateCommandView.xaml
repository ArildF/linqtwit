<UserControl x:Class="LinqTwit.Commands.UI.Views.UpdateCommandView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Infrastructure="clr-namespace:LinqTwit.Infrastructure;assembly=LinqTwit.Infrastructure"
    Height="150" Width="300" Infrastructure:FocusBehavior.FocusFirstElementOnLoaded="True">
    <Border Background="AliceBlue">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="5*"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            
            
            <RichTextBox Grid.Row="0" Grid.Column="0" Grid.RowSpan="2"/>
            
            <Button Grid.Column="1" Grid.Row="0">_Post</Button>
            
        </Grid>
    </Border>
</UserControl>
