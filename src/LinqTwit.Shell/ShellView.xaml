<Window x:Class="LinqTwit.Shell.ShellView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:cal="clr-namespace:Microsoft.Practices.Composite.Presentation.Regions;assembly=Prism"
    xmlns:behaviors="clr-namespace:LinqTwit.Infrastructure.Behaviors;assembly=LinqTwit.Infrastructure"
    Title="ShellView" Height="530" Width="431"
    behaviors:DialogRegionBehaviors.DialogWindowStyle="{StaticResource DialogWindowStyle}"
        behaviors:DialogRegionBehaviors.DialogRegionName="DialogRegion" ShowInTaskbar="True">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="6*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <ContentControl Grid.Column="0" Grid.Row="1" cal:RegionManager.RegionName="QueryEntry" Background="AliceBlue"/>
        <ContentControl Grid.Column="0" Grid.Row="0" cal:RegionManager.RegionName="QueryResults" Background="Red"/>
        
    </Grid>
</Window>
